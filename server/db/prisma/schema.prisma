generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Course {
  id         Int      @id @default(autoincrement())
  name       String   @db.VarChar(100)
  course_type CourseType
  prereqs    Json?
  coreqs     Json?
  it_concentration Concentration
}

enum CourseType {
  gateway
  core
  concentration // denotes that it is post-gateway
}

enum Concentration { // for concentration specific courses only (post-gateway)
  ai
  software
  cyber
  infra
}
